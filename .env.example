# ===========================================
# TRUST Platform Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Database (Azure PostgreSQL)
DATABASE_URL=postgresql://user:password@server.postgres.database.azure.com:5432/trust

# Cerner Sandbox
CERNER_CLIENT_ID=your-client-id
CERNER_CLIENT_SECRET=your-secret
CERNER_SANDBOX_URL=https://fhir-myrecord.cerner.com/r4/

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
